@model SolicitanteModel
@{
    ViewData["Title"] = "Alterar Solicitante";
}

<div class="text-center">
    <h1 class="display-4">Alterar solicitante</h1>
</div>

<form asp-controller="Solicitante" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Codigo" />
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do solicitante">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Telefone do solicitante</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o telefone do solicitante">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>    

    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Solicitante" role="button">Voltar</a>

</form>
